{
    "compilerOptions": {
      "target": "es2016",                                 
      "module": "commonjs",                               
      "rootDir": "src",
      "outDir": "build",                                 
      "resolveJsonModule": true,                       
      "allowJs": true,                                  
      "allowSyntheticDefaultImports": true,            
      "esModuleInterop": true,                        
      "forceConsistentCasingInFileNames": true,            
      "strict": true,                                      
      "noImplicitAny": true,                           
      "skipLibCheck": true    
                                
    }
}
  